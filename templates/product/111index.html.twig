{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Refernce</th>
                <th>Prix</th>
                <th>Description</th>
                <th>In_stock</th>
                <th>Quantity</th>
                <th>Pictures</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.titre }}</td>
                <td>{{ product.refernce }}</td>
                <td>{{ product.prix }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.inStock ? product.inStock|json_encode : '' }}</td>
                <td>{{ product.quantity }}</td>
                <td>{% for media in product.media %}
                    <img src="{{ asset("media/mediaUpload/" ~ media.nom ) }}" alt="" style="width:200px">

                {% endfor %}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
