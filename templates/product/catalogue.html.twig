

{% block body %}

    {% if products %}

    {% include 'product/_filter.html.twig' with {form: form} only %}


        <div class="row justify-content-around">

            {% for product in products %}

                <div class="col-md-3 col-sm-5 cardCatalogue p-3 m-4 text-center">
                
                    <h5>{{ product.titre|capitalize }}</h5>

                    {% for media in product.media %}
                        <img src="{{ asset("media/mediaUpload/" ~ media.nom ) }}" alt="" style="width:150px"> 
                    
                    {% endfor %}

                    <h5>{{ product.prix }} â‚¬</h5>

                     <a class="btn btn-danger col-md-12" href="{{     path(  'product_show'  ,    {'id' : product.id }    )       }}">Voir la fiche</a> 

                </div>
                
            {% endfor %}

        </div>
    {% else %}
        <h4 class="text-center text-danger mt-3 fst-italic">Il n'y a aucun produit pour le moment</h4>
    {% endif %}




{% endblock %}